{
  "manifest_version": 2,

  "name": "Mirror Mouse!",
  "description": "Duplicates the mouse pointer on a different tab",
  "version": "1.0",
  "background": {
      "pesistent": true,
      "scripts": ["bg.js"]
  },
  "browser_action": {
    "default_title": "Mirror Mouse!",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "http://*/",
    "https://*/",
    "file://*/"
  ]
}
